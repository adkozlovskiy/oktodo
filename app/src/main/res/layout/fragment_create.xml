<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.create.CreateActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/et_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:background="@android:color/transparent"
            android:hint="@string/title"
            android:importantForAutofill="no"
            android:inputType="textMultiLine|textCapSentences"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <HorizontalScrollView
            android:id="@+id/horizontal_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingHorizontal="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_title">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleLine="true">

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_tag"
                    android:textAlignment="center"
                    android:textColor="@color/gray"
                    android:textSize="12sp"
                    app:chipBackgroundColor="@color/light_gray"
                    app:chipStrokeColor="@color/gray"
                    app:chipStrokeWidth="0.8dp" />

            </com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/tv_deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:text="Дедлайн"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/horizontal_scroll_view" />

        <TextView
            android:id="@+id/tv_priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/priority"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/cv_priority"
            app:layout_constraintTop_toTopOf="@id/tv_deadline" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_deadline"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="12dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@color/light_gray"
            app:cardCornerRadius="8dp"
            app:layout_constraintEnd_toStartOf="@id/cv_priority"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_deadline"
            app:strokeColor="@color/gray"
            app:strokeWidth="0.8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawablePadding="12dp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:text="Не установлен"
                android:textColor="@color/gray"
                app:drawableStartCompat="@drawable/ic_calendar" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_priority"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginEnd="24dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@color/light_gray"
            app:cardCornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/cv_deadline"
            app:layout_constraintTop_toTopOf="@id/cv_deadline"
            app:strokeColor="@color/gray"
            app:strokeWidth="0.8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:text="Отсутствует"
                android:textColor="@color/gray"
                app:drawableEndCompat="@drawable/ic_dropdown"
                app:drawableTint="@color/gray" />

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tv_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="36dp"
            android:text="@string/notifications"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_priority" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_set_time"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="12dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@color/light_gray"
            app:cardCornerRadius="8dp"
            app:layout_constraintEnd_toStartOf="@id/cv_every"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_notification"
            app:strokeColor="@color/gray"
            app:strokeWidth="0.8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawablePadding="12dp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:text="Единожды"
                android:textColor="@color/gray"
                app:drawableStartCompat="@drawable/ic_calendar" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_every"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginEnd="24dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@color/light_gray"
            app:cardCornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/cv_set_time"
            app:layout_constraintTop_toTopOf="@id/cv_set_time"
            app:strokeColor="@color/gray"
            app:strokeWidth="0.8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawablePadding="12dp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:text="@string/periodically"
                android:textColor="@color/gray"
                app:drawableStartCompat="@drawable/ic_repeat" />

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:text="@string/desc"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_set_time" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            android:drawablePadding="12dp"
            android:hint="@string/write_here_something"
            android:importantForAutofill="no"
            android:inputType="textMultiLine|textCapSentences"
            android:paddingHorizontal="24dp"
            android:paddingVertical="8dp"
            android:textColorHint="@color/gray"
            android:textSize="14sp"
            app:drawableStartCompat="@drawable/ic_create"
            app:drawableTint="@color/gray"
            app:layout_constraintStart_toStartOf="@id/tv_desc"
            app:layout_constraintTop_toBottomOf="@+id/tv_desc" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>